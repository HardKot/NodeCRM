{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2024",
    "types": ["node", "jest"],
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "maxNodeModuleJsDepth": 1
  },
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "enable": true,
    "include": ["jest"]
  }
}

