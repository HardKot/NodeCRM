{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  },
  "include": ["**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
